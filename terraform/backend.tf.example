# Terraform Backend Configuration
# Copy this file to your environment directory (e.g., environments/dev/backend.tf)
# and update the values accordingly

terraform {
  backend "s3" {
    bucket         = "newscrape-terraform-state-ACCOUNT_ID"
    key            = "ENVIRONMENT/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
    dynamodb_table = "newscrape-terraform-locks"

    # Optional: Use IAM role for backend access
    # role_arn = "arn:aws:iam::ACCOUNT_ID:role/TerraformStateRole"
  }
}

# Before using this backend, create the S3 bucket and DynamoDB table:
#
# 1. Create S3 bucket:
#    aws s3api create-bucket \
#      --bucket newscrape-terraform-state-ACCOUNT_ID \
#      --region us-east-1
#
# 2. Enable versioning:
#    aws s3api put-bucket-versioning \
#      --bucket newscrape-terraform-state-ACCOUNT_ID \
#      --versioning-configuration Status=Enabled
#
# 3. Enable encryption:
#    aws s3api put-bucket-encryption \
#      --bucket newscrape-terraform-state-ACCOUNT_ID \
#      --server-side-encryption-configuration '{
#        "Rules": [{
#          "ApplyServerSideEncryptionByDefault": {
#            "SSEAlgorithm": "AES256"
#          }
#        }]
#      }'
#
